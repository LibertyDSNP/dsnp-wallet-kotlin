<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NovaFoundation.Nova" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorAccent">@color/android_system_accent</item>
        <item name="colorPrimary">@color/android_system_accent</item>

        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:navigationBarColor">@color/secondary_screen_background</item>

        <!--text sizes-->
        <item name="textSizeH1">@dimen/text_size_h1</item>
        <item name="textSizeH2">@dimen/text_size_h2</item>
        <item name="textSizeH3">@dimen/text_size_h3</item>
        <item name="textSizeH4">@dimen/text_size_h4</item>
        <item name="textSizeH5">@dimen/text_size_h5</item>
        <item name="textSizeCapsTitle1">@dimen/text_size_caps_title_1</item>
        <item name="textSizeCapsTitle2">@dimen/text_size_caps_title_2</item>

        <item name="textSizeB0">@dimen/text_size_b0</item>
        <item name="textSizeB1">@dimen/text_size_b1</item>
        <item name="textSizeB2">@dimen/text_size_b2</item>
        <item name="textSizeB3">@dimen/text_size_b3</item>


        <item name="textSizeTitle3">@dimen/text_size_title3</item>
        <item name="textSizeSubHeadline">@dimen/text_size_subheadline</item>
        <!--text sizes-->

        <!--fonts-->
        <item name="fontSemiBold">@font/public_sans_semi_bold</item>
        <item name="fontBold">@font/public_sans_bold</item>
        <item name="fontExtraBold">@font/public_sans_extra_bold</item>
        <item name="fontRegular">@font/public_sans_regular</item>
        <item name="fontExtraLight">@font/public_sans_extra_light</item>
        <!--fonts-->

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="editTextStyle">@style/Widget.Nova.Input.EditText</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>

        <item name="defaultTextInputStyle">@style/Widget.Nova.Input.Text</item>
    </style>

    <style name="WhiteOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/text_primary</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize3Percent" parent="">
        <item name="cornerSize">3%</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">30dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ActionButtonMedium" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">30dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ToggleButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">3dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:elevation">8dp</item>
    </style>

</resources>